<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="users-table" author="your_author">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="surname" type="VARCHAR(255)"/>
            <column name="username" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="picture" type="VARCHAR(255)"/>
            <column name="createdDate" type="TIMESTAMP"/>
            <column name="lastModifiedDate" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="authority-table" author="your_author">
        <createTable tableName="authority">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="authority" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-users-authority-table" author="your_author">
        <createTable tableName="user_authorities">
            <column name="user_id" type="BIGINT">
                <constraints references="users(id)" foreignKeyName="fk_user_authorities_users"/>
            </column>
            <column name="authority_id" type="BIGINT">
                <constraints references="authority(id)" foreignKeyName="fk_user_authorities_authority"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>
